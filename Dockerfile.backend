# Etapa 1: Construcci贸n
FROM node:23.3.0-slim AS builder

WORKDIR /app

# Habilitar Corepack para usar Yarn 3+
RUN corepack enable \
    && corepack prepare yarn@3.2.3 --activate \
    && yarn set version 3.2.3

COPY . .

# Instalar dependencias antes de copiar el c贸digo fuente para aprovechar la cache
RUN yarn install

RUN yarn backend:build

# Etapa 2: Producci贸n
FROM node:23.3.0-slim

# -- Add curl and any other needed utilities
RUN apt-get update && apt-get install -y curl

WORKDIR /app

# Copia solo los archivos esenciales desde la etapa de construcci贸n
COPY --from=builder /app/packages/backend/package*.json ./
COPY --from=builder /app/packages/backend/tsconfig.json ./
COPY --from=builder /app/packages/backend/node_modules ./node_modules
COPY --from=builder /app/packages/backend/dist ./dist

# Expone el puerto del backend
EXPOSE 5001

# Comando para ejecutar el backend
CMD ["node", "-r", "tsconfig-paths/register", "dist/server.js"]
