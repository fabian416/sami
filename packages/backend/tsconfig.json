{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*", "./dist/*"],
      "@core/*": ["./src/core/*", "./dist/core/*"],
      "@sockets/*": ["./src/sockets/*", "./dist/sockets/*"],
      "@abi/*": ["./src/abi/*", "./dist/abi/*"],
      "@db/*": ["./src/db/*", "./dist/db/*"],
      "@domain/*": ["./src/domain/*", "./dist/domain/*"],
      "@repositories/*": ["./src/repositories/*", "./dist/repositories/*"],
      "@config/*": ["./src/config/*", "./dist/config/*"],
      "@controllers/*": ["./src/controllers/*", "./dist/controllers/*"],
      "@models/*": ["./src/models/*", "./dist/models/*"],
      "@routes/*": ["./src/routes/*", "./dist/routes/*"],
      "@services/*": ["./src/services/*", "./dist/services/*"],
      "@utils/*": ["./src/utils/*", "./dist/utils/*"],
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/__tests__/**",
    "**/*.test.ts",
    "src/db/migrations/**",
    "drizzle.config.ts",
    "node_modules",
    "dist"
  ]
}

